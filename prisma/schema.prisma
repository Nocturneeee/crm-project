// File: prisma/schema.prisma

datasource db {
  provider = "mysql" // Ganti dengan "mysql" atau "sqlite" jika berbeda
  url      = env("DATABASE_URL")
}

// Konfigurasi Prisma Client
generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma" // <- hapus/komentari agar menggunakan default @prisma/client
}

// --- MODEL DATABASE ---

model Role {
  id          Int     @id @default(autoincrement())
  name        String  @unique // ADMIN, SALES, LEAD
  description String?

  User User[]
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   @db.VarChar(255) // <- pastikan panjang cukup
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi ke Role
  roleId Int
  role   Role @relation(fields: [roleId], references: [id])

  leads Lead[]
}

// --- MODEL BARU: Lead Management ---
enum LeadStatus {
  LEAD_IN // Lead masuk (New)
  CONTACT_MADE // Kontak sudah dibuat
  NEED_IDENTIFIED // Kebutuhan teridentifikasi
  PROPOSAL_MADE // Proposal dibuat
  WON // Deal menang
  LOST // Deal hilang
  DELETE // Lead dihapus/tidak relevan
}

// Tambah enum untuk sumber lead
enum LeadSource {
  WEBSITE
  ADS_CAMPAIGN
  REFERRAL
  EVENT_OFFLINE
  SOCIAL_MEDIA
}

model Lead {
  id        Int        @id @default(autoincrement())
  name      String
  company   String?
  email     String?
  phone     String?
  status    LeadStatus @default(LEAD_IN)
  value     Float?
  priority  String?    @default("Medium") // High, Medium, Low
  source    LeadSource? // Tambah field sumber lead
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id])
}
