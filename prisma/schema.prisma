// File: prisma/schema.prisma


datasource db {
  provider = "mysql" // Ganti dengan "mysql" atau "sqlite" jika berbeda
  url      = env("DATABASE_URL")
}

// Konfigurasi Prisma Client
generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma" // <- hapus/komentari agar menggunakan default @prisma/client
}

// --- MODEL DATABASE ---

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique // ADMIN, SALES, LEAD
  description String?
  
  // Satu Role bisa = banyak user
  users User[]
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  password  String @db.VarChar(255) // <- pastikan panjang cukup
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relasi ke Role
  roleId    Int
  role      Role @relation(fields: [roleId], references: [id])
  
  // Relasi ke Leads: User = pemiliki Lead
  leads     Lead[]
}

// --- MODEL BARU: Lead Management ---
model Lead {
  id          Int      @id @default(autoincrement())
  name        String
  company     String?
  email       String?
  phone       String?
  status      String   @default("New") // New, Contacted, Qualified, Lost
  value       Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relasi ke User/pemilik lead
  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id])
}
